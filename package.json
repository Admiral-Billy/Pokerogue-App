{
  "name": "PokeRogue",
  "version": "1.2.1",
  "description": "",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:mac": "electron-builder --mac"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^29.2.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "@cliqz/adblocker-electron": "^1.27.1",
    "cross-fetch": "^4.0.0",
    "discord-rpc": "^4.0.1"
  },
  "build": {
    "appId": "com.example.pokerogue",
    "productName": "PokeRogue",
    "publish": [
      "github"
    ],
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "extraResources": [
      "update-game.js",
	  "keymap.json"
    ],
    "win": {
      "icon": "icons/PR.ico",
      "target": "nsis",
      "extraFiles": [
        {
          "from": "PokeRogue Offline.bat",
          "to": "PokeRogue Offline.bat"
        },
        {
          "from": "update-game.bat",
          "to": "resources/update-game.bat"
        }
      ]
    },
    "linux": {
      "icon": "icons/PR.png",
      "target": "AppImage",
      "extraFiles": [
        {
          "from": "PokeRogue Offline.sh",
          "to": "PokeRogue Offline.sh"
        },
        {
          "from": "update-game.sh",
          "to": "resources/update-game.sh"
        }
      ]
    },
    "mac": {
      "icon": "icons/PR.icns",
      "target": "dmg",
      "extraFiles": [
        {
          "from": "PokeRogue Offline.command",
          "to": "../../PokeRogue Offline.command"
        },
        {
          "from": "update-game.command",
          "to": "resources/update-game.command"
        }
      ]
    }
  }
}